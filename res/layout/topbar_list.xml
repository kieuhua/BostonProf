<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/event_list_view"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" 
	android:background="#8B2252">
	
	<!--  TOPBAR -->
	<RelativeLayout android:id="@+id/topbar"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:padding="2px" android:layout_marginTop="2px"
		android:layout_gravity="center_horizontal">
		
		<ImageView android:id="@+id/eventboss"
			android:src="@drawable/bostonprof"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerVertical="true"
			></ImageView>
		<ImageView android:id="@+id/currentview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/eventboss"
			android:paddingTop="1px"
			android:src="@drawable/curevent"
			></ImageView>
			
		 <ImageView android:src="@drawable/lobster_m_icon"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_alignParentTop="true"
  			></ImageView>
  		
  		<ImageButton android:id="@+id/forwardbtn"
  			android:src="@drawable/forward_icon"
  			android:layout_height="40px"
			android:layout_width="40px"
  			android:layout_alignParentRight="true"
  			android:background="@color/lawngreen"
  			></ImageButton>
  			
  		<ImageButton android:id="@+id/reloadbtn"
  			android:src="@drawable/reload_icon"
  			android:layout_height="40px"
			android:layout_width="40px"
  			android:layout_toLeftOf="@id/forwardbtn"
  			android:background="@color/lawngreen"
  			></ImageButton>
			
	</RelativeLayout>

	<ListView android:id="@+id/android:list" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:cacheColorHint="#ff8247"
		>
    </ListView>
</LinearLayout> <!--  end activity view -->
