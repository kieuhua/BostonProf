<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:scrollbars="vertical"
	android:scrollbarAlwaysDrawVerticalTrack="true">
	
    	<!--  TOPBAR -->
	<RelativeLayout android:id="@+id/topbar"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:padding="2px" android:layout_marginTop="2px"
		android:layout_gravity="center_horizontal">
		
		<ImageView android:id="@+id/eventboss"
			android:src="@drawable/eventinformation"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerVertical="true"
			></ImageView>
		<ImageView android:id="@+id/currentview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/eventboss"
			android:src="@drawable/currentevents"
			android:padding="2px"
			></ImageView>
			
		<ImageButton android:id="@+id/backbtn"
  			android:src="@drawable/back_icon"
  			android:layout_height="40px"
			android:layout_width="40px"
  			android:layout_alignParentRight="true"
  			android:background="@color/magenta"
  			></ImageButton>
			
		<ImageButton android:id="@+id/savebtn"
  			android:src="@drawable/save_icon"
  			android:layout_height="40px"
			android:layout_width="40px"
  			android:layout_toLeftOf="@id/backbtn"
  			android:background="@color/magenta"
  			></ImageButton>
  		<ImageButton android:id="@+id/mapbtn"
  			android:src="@drawable/globe_icon"
  			android:layout_height="40px"
			android:layout_width="40px"
  			android:layout_toLeftOf="@id/savebtn"
  			android:background="@color/magenta"
  			></ImageButton>
			
	</RelativeLayout>
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:background = "#884513">
    	
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight= ".5" 
			android:background="#8B4513"
			android:textColor="#000000">
			
			<TextView android:id="@+id/etype"
				android:padding="4dip"
				android:textColor="#000000"
				android:layout_alignParentRight="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="5pt"/>
				
			<TextView android:id="@+id/edate"
				android:padding="4dip"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="6pt"/>	
			
			<TextView android:id="@+id/elocation"
				android:textColor="#000000"
				android:padding="4dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="7pt"  />	
	 	</LinearLayout> 
	 	
	 	<ImageButton android:id="@+id/expandbtn1"
  			android:src="@drawable/expandbtn"
  			android:layout_height="25px"
			android:layout_width="25px"
  			android:layout_alignParentRight="true"
  			></ImageButton>
	 </LinearLayout> 
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:background = "#ff0000">
			
		<TextView android:id="@+id/etitle"
			android:padding="4dip"
			android:layout_alignParentRight="true"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor ="#ffffff"
			android:textSize="10pt"
			android:layout_weight="1"/>	
		<ImageButton android:id="@+id/expandbtn2"
  			android:src="@drawable/expandbtn"
  			android:layout_height="25px"
			android:layout_width="25px"
  			android:layout_alignParentRight="true"
  			></ImageButton>
		
	</LinearLayout>
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background = "#ffa500"
		android:layout_weight="1"
		android:scrollbars="vertical">
	
		<TextView android:id="@+id/edescription"
			android:padding="4dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:maxLines="5"
			android:scrollbars="vertical"
			android:textColor="#000000"
			android:layout_weight="1"/>
		<ImageButton android:id="@+id/expandbtn3"
  			android:src="@drawable/expandbtn"
  			android:layout_height="25px"
			android:layout_width="25px"
  			android:layout_alignParentRight="true"
  			></ImageButton>	
			
	</LinearLayout>
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight=".5"
		android:background="#000080">
	
		<TextView android:id="@+id/elink"
			android:padding="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="8pt"
			android:layout_weight="1"/>	
		<ImageButton android:id="@+id/expandbtn4"
  			android:src="@drawable/expandbtn"
  			android:layout_height="25px"
			android:layout_width="25px"
  			android:layout_alignParentRight="true"
  			></ImageButton>
	</LinearLayout>
	
	<ListView android:id="@+id/android:list" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"/>
	
	</LinearLayout>
				
				
	
				
